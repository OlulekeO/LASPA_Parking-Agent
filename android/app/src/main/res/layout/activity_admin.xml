<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

        <Button
                android:id="@+id/setup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:gravity="center"
                android:text="Setup Terminal"/>


        <Button
                android:id="@+id/settlement_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:enabled="true"
                android:gravity="center"
                android:text="Settlement"/>

        <Button
                android:id="@+id/advert_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:gravity="center"
                android:text="Advertise"/>

        <Button
                android:id="@+id/reprint_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:gravity="center"
                android:text="Reprint"/>

        <Button
                android:id="@+id/end_of_day_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:gravity="center"
                android:text="End of Day"/>

        <Button
                android:id="@+id/print_config_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:gravity="center"
                android:text="Print Config"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>